{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "adapter": {
      "type": "library",
      "root": "libs/adapter",
      "entryFile": "index",
      "sourceRoot": "libs/adapter/src",
      "compilerOptions": {
        "tsConfigPath": "libs/adapter/tsconfig.lib.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "business": {
      "type": "library",
      "root": "libs/business",
      "entryFile": "index",
      "sourceRoot": "libs/business/src",
      "compilerOptions": {
        "tsConfigPath": "libs/business/tsconfig.lib.json"
      }
    },
    "infrastructure": {
      "type": "library",
      "root": "libs/infrastructure",
      "entryFile": "index",
      "sourceRoot": "libs/infrastructure/src",
      "compilerOptions": {
        "tsConfigPath": "libs/infrastructure/tsconfig.lib.json"
      }
    },
    "trpc": {
      "type": "application",
      "root": "apps/trpc",
      "entryFile": "main",
      "sourceRoot": "apps/trpc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/trpc/tsconfig.app.json"
      }
    },
    "utils": {
      "type": "library",
      "root": "libs/utils",
      "entryFile": "index",
      "sourceRoot": "libs/utils/src",
      "compilerOptions": {
        "tsConfigPath": "libs/utils/tsconfig.lib.json"
      }
    }
  }
}