{
  "name": "be-layered-example",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "api:start": "nest start --debug --watch",
    "api:start:prod": "nest build api && node dist/apps/api/main",
    "trpc:start": "nest start trpc --debug --watch",
    "trpc:start:prod": "nest build trpc && node dist/apps/trpc/main",
    "prisma:generate": "prisma generate",
    "prisma:script": "prisma migrate dev --create-only",
    "prisma:migrate:postgresql": "npx prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:migrate:postgresql:deploy": "npx prisma migrate deploy --schema=./prisma/schema.prisma",
    "test:unit": "vitest",
    "e2e:api:setup": "bash scripts/e2e-api-setup.sh",
    "e2e:api:teardown": "bash scripts/e2e-api-teardown.sh",
    "e2e:api:test": "DATABASE_URL=postgresql://testuser:testpass@localhost:5433/testdb vitest --config tests/e2e/api/vitest.config.e2e.mts",
    "e2e:api": "npm run e2e:api:setup && npm run e2e:api:test && npm run e2e:api:teardown",
    "e2e:trpc:setup": "bash scripts/e2e-trpc-setup.sh",
    "e2e:trpc:teardown": "bash scripts/e2e-trpc-teardown.sh",
    "e2e:trpc:test": "DATABASE_URL=postgresql://testuser:testpass@localhost:5433/testdb vitest --config tests/e2e/trpc/vitest.config.e2e.mts",
    "e2e:trpc": "npm run e2e:trpc:setup && npm run e2e:trpc:test && npm run e2e:trpc:teardown",
    "e2e:playwright": "npx playwright test --config tests/e2e/playwright.config.ts",
    "e2e": "npm run e2e:api && npm run e2e:trpc",
    "e2e:full": "npm run e2e && npm run e2e:playwright",
    "lint": "eslint \"{apps,libs}/**/*.{js,ts}\" --report-unused-disable-directives --max-warnings 100",
    "lint:fix": "eslint \"{apps,libs}/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"{apps,libs}/**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"{apps,libs}/**/*.{js,ts,json,md}\""
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.9.0",
    "@trpc/client": "^11.4.4",
    "@trpc/server": "^11.4.4",
    "@types/cors": "^2.8.19",
    "argon2": "^0.43.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@playwright/test": "^1.54.2",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.13.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "playwright": "^1.54.2",
    "prettier": "^3.4.2",
    "prisma": "^6.9.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swc-loader": "^0.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-swc": "^1.5.5",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
